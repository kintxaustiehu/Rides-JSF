<?xml version="1.0" encoding="UTF-8"?>
<faces-config
	xmlns="https://jakarta.ee/xml/ns/jakartaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
https://jakarta.ee/xml/ns/jakartaee/web-facesconfig_3_0.xsd"
	version="3.0">
	<converter>
        <converter-for-class>domain.Driver</converter-for-class>
        <converter-class>converters.DriverConverter</converter-class>
    </converter>
	
	<managed-bean>
		<managed-bean-name>createRide</managed-bean-name>
		<managed-bean-class>beans.CreateRideBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>queryRides</managed-bean-name>
		<managed-bean-class>beans.QueryRidesBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>register</managed-bean-name>
		<managed-bean-class>beans.UserRegistrationBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>login</managed-bean-name>
		<managed-bean-class>beans.UserLoginBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<navigation-rule>
	    <display-name>Login.xhtml</display-name>
	    <from-view-id>/Login.xhtml</from-view-id>
	    <navigation-case>
	        <from-outcome>ok</from-outcome>
	        <to-view-id>/QueryRides.xhtml</to-view-id>
	    </navigation-case>
	</navigation-rule>
</faces-config>